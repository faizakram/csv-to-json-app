{
  "name": "csv-to-json-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:csv-to-json-app": "node dist/csv-to-json-app/server/server.mjs",
    "serve:prod": "node production-server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop csvtojson-app",
    "pm2:restart": "pm2 restart csvtojson-app",
    "pm2:reload": "pm2 reload csvtojson-app",
    "pm2:logs": "pm2 logs csvtojson-app",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "health": "curl -f http://localhost:4000/health || echo 'Health check failed'",
    "deploy:build": "npm run clean && npm run build:prod",
    "deploy:package": "tar -czf csvtojson-deployment.tar.gz dist/ production-server.js ecosystem.config.js package.json",
    "deploy:clean": "rm -f csvtojson-deployment.tar.gz",
    "deploy:all": "npm run deploy:build && npm run deploy:package",
    "test:local": "npm run serve:prod & sleep 3 && npm run health && pkill -f production-server.js",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/csv-to-json-app/browser/stats.json",
    "lint": "ng lint",
    "clean": "rm -rf dist node_modules/.cache logs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.1",
    "@types/xlsx": "^0.0.35",
    "express": "^5.1.0",
    "papaparse": "^5.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@types/papaparse": "^5.3.16",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}